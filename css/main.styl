body
  background-color rgb(243, 243, 243)
  margin 0px
  font-size 16px

header
  background-color rgb(224, 224, 224)
  font-family 'Shadows Into Light', cursive
  width 100%
  height 5.9em
  position fixed
  top 0
  box-shadow 0 3px 10px 0 #111111
  z-index 5
  h1
    color rgba(128, 128, 128, 0.32)
    text-shadow #555
    font-size 3rem
    font-family 'Francois One', sans-serif
    float left
    margin 0.2em 1em
    &:hover
      color white

#a
  width 0
  height 0
  border-top 32px solid transparent
  border-bottom 24px solid transparent
  border-right 39px solid rgba(87, 81, 81, 0.13)
  float left

#left-header
  background-color rgba(87, 81, 81, 0.13)
  float left
  width 10%
  padding 12px
  height 55px
  :hover
    color white
  h1
    color rgba(128, 128, 128, 0.32)
    text-shadow #555
    font-size 3rem
    font-family 'Francois One', sans-serif
    margin -20px -21px
    width 0px
    float right

#content-left
  margin 1.5em 0em
  margin-left 2em
  a
    color rgba(128, 128, 128, 0.32)
    font-size 10em
    font-family 'Francois One', sans-serif
    font-size 2rem

#search
  margin 1.5em 11em 0.5em
  a
    float right
    color rgba(128, 128, 128, 0.32)
    font-size 3em
    &:hover
      color white
  .icon-settings
    margin-right 1.5rem

#search-input
  display none
  input
    width 98%
    height 3em
    border solid 0.5em rgb(251, 250, 252)
    margin-left 1em

#container
  height 100%
  width 1350px
  margin 12em 0em
  article
    background-color white
    margin 1.5em 2.5em 4em 2.5em
    float left
    width 24%
    figure
      margin 0em
      img
        border solid white 8px
        margin 0px
        height 175px
        position relative
        width 100%
  .title
    border-bottom solid 0.1em rgba(0, 0, 0, 0.31)
    box-shadow 0px 11px 9px rgba(136, 136, 136, 0.4)
    height 80px
    background-color white
    &:hover
      background-color rgb(195, 196, 198)
      width 100%
      padding 1em
  #imagen
    float left
    width 40%
    img
      border solid white 8px
  #seasons
    margin 1em 0em
    float right
    width 60%
    h3
      color rgba(128, 128, 128, 0.32)
      text-shadow #555
      font-size 3rem
      font-family 'Francois One', sans-serif
      margin 0em 12px

.title
  h2
    color black
    margin 0em 0.2em
    font-family 'Francois One', sans-serif
    font-size 1.3em
    text-align left
    text-transform uppercase
    width 100%
  .info
    font-family 'Francois One', sans-serif
    color black
    p
      font-size 1rem
      float left
      margin 0px
    span
      float right
      font-size 1em
    em
      float left
      margin 0px

#linea-detail
  background-color rgb(222, 217, 217)
  height 1px
  margin 0em
  margin-left 2em
  margin-right 28em
  width 86%

#seasons
  .numbers
    box-shadow 0px 11px 9px rgba(136, 136, 136, 0.4)
    float left
    height 60px
    width 50px
    margin 0em 1em
    h5
      color rgb(171, 168, 168)
      margin-top 6px
      text-align center
      font-size 33px
      font-family 'Francois One', sans-serif
      &:hover
        color white
    &:hover
      background-color gray
      opacity 0.1
  #chapters
    margin 5em 0em
    ul
      text-decoration none
      list-style none
      li
        span
          color rgba(128, 128, 128, 0.3)
          margin 1em 1em
          font-size 1.5em
          font-family 'Francois One', sans-serif
          float left
    span
      p
        text-indent center
        margin 1em 3em
        float right
        width 30%

.descripcion
  text-align justify
  margin 1em 7em
  width 60%

#alert-data
  background-color white
  opacity 0.5
  border-radius 3px
  border 1px solid rgba(0, 0, 0, 0.1)
  border solid white 1px
  color black
  margin-bottom 12px
  margin 0em 1em
  -webkit-border-radius 3px
  -moz-border-radius 3px
  -ms-border-radius 3px
  -o-border-radius 3px
  text-shadow 0 -1px
  text-align center
  visibility hidden
  padding 13px 12px 12px
  font-family 'Francois One', sans-serif
  font-size 14px rgba(0, 0, 0, 0.3)
  width 98%
  height 40%
  p
    font-size 100px

.linea-p
  background rgb(214, 214, 214)
  margin 1em 0em
  height 2px
  width 90%

#msg_resultados
  width 100%
  background rgb(210, 210, 210)
  float right
  text-align center
  h4
    color white
    font-family 'Francois One', sans-serif

